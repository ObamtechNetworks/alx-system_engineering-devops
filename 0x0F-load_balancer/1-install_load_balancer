#!/usr/bin/env bash
# Update the package list
sudo apt update -y

# Install HAproxy if not installed
sudo apt install -y haproxy

# Backup the existing configuration
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.backup

# Allow traffic on port 80 in the firewall (ufw)
sudo ufw allow 80

# Append the necessary configuration to HAproxy
sudo tee -a /etc/haproxy/haproxy.cfg > /dev/null <<EOF
frontend obams_frontend
    bind *:80
    mode http
    default_backend obams_backend

backend obams_backend
    mode http
    balance roundrobin
    server web-01 54.237.76.176:80 check
    server web-02 52.201.222.21:80 check
EOF

# Make sure HAproxy can be managed via an init script
sudo systemctl restart haproxy
