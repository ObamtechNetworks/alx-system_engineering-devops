#!/usr/bin/env bash
# this script sets up and configures HAproxy on your lb-01 server

# install packages
sudo apt -y update
sudo apt -y install haproxy

# customize default configuration
echo "

frontend http_front
    bind *:80
    mode http
    default_backend obams_backend

backend obams_backend
    mode http
    balance roundrobin
    server 221986-web-01 54.237.76.176:80 check
    server 221986-web-02 52.201.222.21:80 check
" | sudo tee /etc/haproxy/haproxy.cfg

# enable haproxy to be started by init script
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

# Step 5: Restart HAProxy
sudo systemctl restart haproxy
