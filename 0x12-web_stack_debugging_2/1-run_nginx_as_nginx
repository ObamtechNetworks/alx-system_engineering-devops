#!/usr/bin/env bash
# script reates nginx as nginx

# Modify Nginx configuration to run as nginx user and listen on port 8080
sudo sed -i 's/user .*;/user nginx;/' /etc/nginx/nginx.conf
sudo sed -i 's/listen .*;/listen 8080 default_server;/' /etc/nginx/nginx.conf

# Restart Nginx
sudo service nginx restart
